{
    "contributions": [
        {
            "id": "jarhughe.quicksteps.quicksteps-work-item-form-group",
            "type": "ms.vss-work-web.work-item-form-control",
            "description": "Custom work item form group",
            "targets": [
                "ms.vss-work-web.work-item-form"
            ],
            "properties": {
                "name": "Microsoft QuickSteps",
                "uri": "dist/Main/index.html",
                "height": 600,
                "inputs": [
                    {
                        "id": "View Type",
                        "name": "If this form should have the admin view, enter ADMIN. If this form should have the user view, enter USER. Entry must be in CAPS.",
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    }
                ]
            }
        }
    ],
    "scopes": [
        "vso.work_write"
    ]
}